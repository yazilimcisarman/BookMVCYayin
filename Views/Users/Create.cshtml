

<form class="user" method="post" action="/Users/Create">
    <div class="form-group">
        <input type="text" class="form-control form-control-user"
               id="name" name="name" 
               placeholder="Kullanicinin Adini Giriniz.">
    </div>
    <div class="form-group">
        <input type="text" class="form-control form-control-user"
               id="surname" name="surname"
               placeholder="Kullanicinin Soyadini Giriniz.">
    </div>
    <div class="form-group">
        <input type="email" class="form-control form-control-user"
           id="email" name="email" aria-describedby="emailHelp"
           placeholder="Kullanicinin Emailini Giriniz.">
    </div>
    <div class="form-group">
        <input type="text" class="form-control form-control-user"
               id="phone" name="phone" 
           placeholder="Kullanicinin Telefonunu Giriniz.">
    </div>
   
    <hr>
    <button type="submit" class="btn btn-primary btn-user btn-block">
        KAYDET  
    </button>
    
</form>