@model List<Category>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kategorilerimiz</h6>
        <a class="btn btn-primary btn-user btn-block"  href="/Categories/Create"> Kategori Olustur</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @if (Model.Count > 0)
            {
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Adı</th>
                            <th>Üst Kategori Mi ?</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model) 
                        {
                            <tr>
                                <td>@category.Id</td>
                                <td>@category.Name</td>
                                <td>@category.UstKategori</td>
                            </tr>
                        }

                    </tbody>
                </table>
            }
            else
            {
                <p>Kategori Bulunamadı.</p>
            }

        </div>
    </div>
</div>