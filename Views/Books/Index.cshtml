@model List<Book>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kitaplarımız</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @if (Model.Count>0)
            {
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Yazar</th>
                            <th>Stok</th>
                            <th>Kategori</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model)
                        {
                            <tr>
                                <td>@book.Title</td>
                                <td>@book.Author</td>
                                <td>@book.Stock</td>
                                <td>@book.KategoriId</td>
                            </tr>
                        }

                    </tbody>
                </table>
            }
            else
            {
                <p>Kitap Bulunamadı.</p>
            }
           
        </div>
    </div>
</div>